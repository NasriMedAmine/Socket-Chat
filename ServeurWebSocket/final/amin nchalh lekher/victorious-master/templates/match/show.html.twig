{% extends 'base.html.twig' %}

{% block title %}Match{% endblock %}

{% block body %}
    <h1>Match</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdMatch</th>
                <td>{{ match.idMatch }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ match.date ? match.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Teams</th>
                <td>{{ match.teams }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_match_index') }}">back to list</a>

    <a href="{{ path('app_match_edit', {'idMatch': match.idMatch}) }}">edit</a>

    {{ include('match/_delete_form.html.twig') }}
{% endblock %}
