{% extends 'base.html.twig' %}

{% block title %}Player index{% endblock %}

{% block body %}
    <h1>Player index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdPlayer</th>
                <th>Level</th>
                <th>Pseudo</th>
                <th>Teams</th>
                <th>Password</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.idPlayer }}</td>
                <td>{{ player.level }}</td>
                <td>{{ player.pseudo }}</td>
                <td>{{ player.teams }}</td>
                <td>{{ player.password }}</td>
                <td>{{ player.mail }}</td>
                <td>
                    <a href="{{ path('app_player_show', {'id': player.idPlayer}) }}">show</a>
                    <a href="{{ path('app_player_edit', {'id': player.idPlayer}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_player_new') }}">Create new</a>
{% endblock %}
