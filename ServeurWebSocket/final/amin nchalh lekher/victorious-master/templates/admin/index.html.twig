{% extends 'admin/bars.html.twig' %}

{% block contenpage %}
    <h1>Admin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdAdmin</th>
                <th>Pseudo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.idAdmin }}</td>
                <td>{{ admin.pseudo }}</td>
                <td>
                    <a href="{{ path('app_admin_show', {'idAdmin': admin.idAdmin}) }}">show</a>
                    <a href="{{ path('app_admin_edit', {'idAdmin': admin.idAdmin}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_new') }}">Create new</a>
{% endblock %}
