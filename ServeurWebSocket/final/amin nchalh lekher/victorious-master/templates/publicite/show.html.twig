{% extends 'base.html.twig' %}

{% block title %}Publicite{% endblock %}

{% block body %}
    <h1>Publicite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publicite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ publicite.nom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ publicite.image }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ publicite.dateDebut ? publicite.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ publicite.dateFin ? publicite.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NomProprietaire</th>
                <td>{{ publicite.nomProprietaire }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ publicite.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publicite.description }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ publicite.video }}</td>
            </tr>
            <tr>
                <th>Docs</th>
                <td>{{ publicite.docs }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publicite_index') }}">back to list</a>

    <a href="{{ path('app_publicite_edit', {'id': publicite.id}) }}">edit</a>

    {{ include('publicite/_delete_form.html.twig') }}
{% endblock %}
